<Window x:Class="JSShop.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSShop"
        mc:Ignorable="d"
        Title="Register" Height="800" Width="350"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\PAVITHRA\Downloads\Regback2.jpg"></ImageBrush>
    </Window.Background>
    <Border Width="300" Height="750" CornerRadius="28">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="12" Direction="-45"></DropShadowEffect>
        </Border.Effect>
        <Border.Background>
            <ImageBrush ImageSource="C:\Users\PAVITHRA\Downloads\Regback2.jpg"></ImageBrush>
        </Border.Background>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="REGISTER" Foreground="White" FontSize="20" FontWeight="ExtraBold" HorizontalAlignment="Center"></TextBlock>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Foreground="White" FontSize="14" Text="User Name" Grid.Row="0" Margin="0,15"></TextBlock>
                <TextBox Text="Enter the User Name" x:Name="txtname" Grid.Row="1"></TextBox>
                <TextBlock Foreground="White" FontSize="14" Text="User ID" Grid.Row="2" Margin="0,15"></TextBlock>
                <TextBox Text="UserID"  x:Name="txtuserId" Grid.Row="3"></TextBox>
                <TextBlock Foreground="White" FontSize="14" Text="Age" Grid.Row="4" Margin="0,15"></TextBlock>
                <TextBox Text="Enter the Age" x:Name="txtage" Grid.Row="5"></TextBox>
                <TextBlock Foreground="White" FontSize="14" Text="Email ID:" Grid.Row="6" Margin="0,15"></TextBlock>
                <TextBox Text="Enter your Email ID" x:Name="txtemail"  Grid.Row="7"></TextBox>
                <TextBlock Foreground="White" FontSize="14" Text="Phone No:" Grid.Row="8" Margin="0,15"></TextBlock>
                <TextBox Text="Enter your Phone no." MaxLength="10" x:Name="txtphone"  Grid.Row="9"></TextBox>
                <TextBlock Foreground="White" FontSize="14" Text="Enter the password"  Grid.Row="10" Margin="0,15"></TextBlock>
                <PasswordBox Password="Enter the password" x:Name="pbpwd"  Grid.Row="11"></PasswordBox>
                <TextBlock Foreground="White" FontSize="14" Text="Confirm the password"  Grid.Row="12" Margin="0,15"></TextBlock>
                <PasswordBox Password="Confirm the password"  x:Name="pbCpwd" Grid.Row="13"></PasswordBox>
            </Grid>
            <StackPanel Margin="0,20"  Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnRegister" Click="btnRegister_Click" Content="Register" Foreground="DarkMagenta" FontWeight="Bold" Background="Wheat" Width="100" Margin="0,0,30,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="18"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="RegSQL" x:Name="BtnCancel" Click="BtnCancel_Click" Foreground="DarkMagenta" FontWeight="Bold" Background="Wheat" Width="100" Height="50">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="18"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
           
        </StackPanel>
    </Border>
</Window>
